use App\Http\Controllers\Controller;
use yajra\Datatables\Datatables as Datatables;
use Illuminate\Http\Request;
use Illuminate\Routing\Router as Route;
use App\Services\DatatablePresenter;
use Auth;
use Input;

class AdvantageController extends Controller {

	/**
	 * Display a listing of the resource.
	 *
	 * @return Response
	 */
	public function index(Advantage $advantage)
	{
		$advantages = $advantage
			->select(array('id', 'image', 'title','description'))
			->orderBy('id','desc')->get();

			$tableData = Datatables::of($advantages)
			->editColumn('image', '<div class="image"><img src="images/uploads/{{ $flag }}"  width="50px" height="50px">')
				->addColumn('actions', function ($data)
					{return view('partials.actionBtns')->with('controller','snew')->with('id', $data->id)->render(); });

			if($request->ajax())
				return DatatablePresenter::make($tableData, 'index');
		return view('advantages.index')
			->with('tableData', DatatablePresenter::make($tableData, 'index'));
	}

